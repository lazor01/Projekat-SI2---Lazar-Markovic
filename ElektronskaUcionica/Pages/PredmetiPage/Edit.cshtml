@page
@model ElektronskaUcionica.Pages.PredmetiPage.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Izmeni</h1>

<h4>Predmeti</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Predmeti.ID" />
            <div class="form-group">
                <label asp-for="Predmeti.Name" class="control-label"></label>
                <input asp-for="Predmeti.Name" class="form-control" />
                <span asp-validation-for="Predmeti.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./predmet">Vrati se nazad</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
